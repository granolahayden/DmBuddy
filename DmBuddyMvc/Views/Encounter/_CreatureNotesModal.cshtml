@using DmBuddyMvc.Helpers;
<div id="creatureNotesModal" class="modal fade" tabindex="-1" aria-labelledby="creatureNotesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creatureNotesModalLabel">Creature Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span id="creatureNotesModalId" style="display:none"></span>

                @if (User.IsAtLeastPremium())
                {
                    <div class="d-flex justify-content-center">
                        <img id="creatureNotesModalPic"/>
                    </div>
                    <hr/>
                    <div class="d-flex justify-content-center">
                        <textarea id="creatureNotesModalNotes" rows="10" cols="40"></textarea>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-center">
                        <textarea id="creatureNotesModalNotes" rows="10" cols="40"></textarea>
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="dmb.encounter.SaveCreatureNotesModal()">Save & Close</button>
            </div>
        </div>
    </div>
</div>