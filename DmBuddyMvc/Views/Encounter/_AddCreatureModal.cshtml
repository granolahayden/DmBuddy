<div class="modal fade" id="addCreatureModal" tabindex="-1" aria-labelledby="addCreatureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCreatureModalLabel">New Creature</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="creatureNameInput" class="col-form-label">Creature Name:</label>
                        <input type="text" class="form-control" id="creatureNameInput">
                    </div>
                    <div class="mb-3 container">
                        <div class="row align-items-start">
                            <div class="col">
                                <label for="creatureInitiativeInput" class="col-form-label">Initiative(s):</label>
                                <input type="text" class="form-control" placeholder="7 3 12..." id="creatureInitiativeInput">
                            </div>
                            <div class="col">
                                <label for="creatureHPInput" class="col-form-label">HP:</label>
                                <input type="text" class="form-control" id="creatureHPInput">
                            </div>
                            <div class="col">
                                <label for="creatureACInput" class="col-form-label">AC:</label>
                                <input type="text" class="form-control" id="creatureACInput">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div>
                            <label for="creatureNotesInput" class="col-form-label">Notes:</label>
                        </div>
                        <div class="d-flex justify-content-center">
                            <textarea id="creatureNotesInput" rows="5" cols="40"></textarea>
                        </div>
                    </div>

                    @if(User.IsInRole(IdentityConsts.Roles.Admin) || User.IsInRole(IdentityConsts.Roles.Premium))
                    {
                        <div class="mb-3">
                            <label for="creaturePictureInput" class="col-form-label">Creature Picture:</label>
                            <input class="form-control mb-2" type="file" accept="image/png, image/jpeg" id="creaturePictureFileInput" />

                            <div id="creaturePicturePasteBox" class="bg-dark d-flex align-items-center justify-content-center" style="width:100%; height:200px">
                                <img id="creaturePictureInput" style="width:100%; height:100%; display:none" />
                                <span id="creaturePictureOverlay"><h2 class="text-light"><i class="bi bi-card-image text-light pe-2"></i>Paste or upload image</h2></span>
                            </div>
                        </div>
                    }
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="dmb.encounter.AddCreaturesAndResetForm();">Add</button>
            </div>
        </div>
    </div>
</div>